#include <stdio.h>
#include<stdlib.h>

int main(){
	float x,y,z;
	printf("Enter three integers: ");
	fflush(stdout);
	scanf("%f%f%f",&x,&y,&z);
	fflush(stdout);fflush(stdin);

	if(x > y){
		if(x > z)
			printf("largest number is = %f",x);
		else
			printf("largest number is = %f",z);
	}else{
		if(y > z)
			printf("largest number is = %f",y);
		else
			printf("largest number is = %f",z);
	}

	return 0;
}


